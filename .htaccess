# Enable Rewrite Engine
RewriteEngine On
RewriteBase /

# 1. Redirect index.html and index.php to root (/)
# This solves the "Accessible index page" duplicate content issue
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s(.*)/index\.(html|php) [NC]
RewriteRule ^index\.(html|php)$ / [R=301,L]

# 2. Remove trailing slash from all URLs (excluding actual directories)
# This solves the "Trailing slash" duplicate content issue
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [R=301,L]

# 3. Force HTTPS (Optional but recommended for consistency)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
